<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:fontFamily="@font/yandex_bold"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="Как какать" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:onClick="onMyButtonClick"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_baseline_home_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="70dp"
            app:cardBackgroundColor="@color/gray"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/yandex_bold"
                android:text="Как обновить приложение?"
                android:textColor="@color/black"
                android:textSize="21sp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yandex_regular"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/a1" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/gray"
            tools:ignore="DuplicateIds,MissingConstraints">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/yandex_bold"
                android:text="Как можно сообщить о багах?"
                android:textColor="@color/black"
                android:textSize="21sp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yandex_regular"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Сообщить о баге можно лично или в Телеграме" />




        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>