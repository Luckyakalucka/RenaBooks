<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/yandex_bold"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp">


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="128dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="128dp"
            app:srcCompat="@drawable/ic_laucher" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivtimetable"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_baseline_table_chart_24" />

            <Button
                android:id="@+id/timetable"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/yandex_regular"
                android:onClick="onMyButtonClick"
                android:text="@string/timetable" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_menu_book_24" />

        <Button
            android:id="@+id/books"
            android:onClick="onMyButtonClick"
            android:layout_width="200dp"
            android:layout_gravity="end"
            android:fontFamily="@font/yandex_regular"
            android:background="@color/colorPrimary"
            android:layout_height="45dp"
            android:text="@string/books" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_timer_24" />

            <Button
                android:id="@+id/timetabletime"
                android:onClick="onMyButtonClick"
                android:layout_width="200dp"
                android:layout_gravity="end"
                android:fontFamily="@font/yandex_regular"
                android:background="@color/colorPrimary"
                android:layout_height="45dp"
                android:text="@string/timetabletime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_baseline_settings_24" />

            <Button
                android:id="@+id/settings"
                android:onClick="onMyButtonClick"
                android:layout_width="200dp"
                android:layout_gravity="end"
                android:fontFamily="@font/yandex_regular"
                android:background="@color/colorPrimary"
                android:layout_height="45dp"
                android:text="@string/settings" />
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>